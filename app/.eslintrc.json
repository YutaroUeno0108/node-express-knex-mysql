{
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "strict": [2, "global"],
      "max-len": [2, 120, 2],
      "no-unused-expressions": 0,
      "semi": [2, "never"],
      "comma-dangle": ["error", "never"],
      "func-names": 0,
      "no-param-reassign": 0,
      "space-before-function-paren": [2, "always"]
    }
}